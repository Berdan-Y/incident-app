<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Maui.ViewModels"
             x:Class="Maui.Pages.AllIncidentsPage"
             x:DataType="viewmodels:AllIncidentsViewModel"
             Title="All Incidents">

    <Grid RowDefinitions="Auto,*">
        <ActivityIndicator Grid.RowSpan="2"
                          IsVisible="{Binding IsLoading}"
                          IsRunning="{Binding IsLoading}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center" />

        <RefreshView Grid.Row="1" 
                    Command="{Binding LoadIncidentsCommand}"
                    IsRefreshing="{Binding IsLoading}">
            <CollectionView ItemsSource="{Binding Incidents}"
                          EmptyView="No incidents found.">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10" Padding="10">
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Title}"
                                       FontAttributes="Bold" />
                                
                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="{Binding Description}"
                                       LineBreakMode="TailTruncation" />
                                
                                <StackLayout Grid.Row="2" Grid.Column="0"
                                           Orientation="Horizontal">
                                    <Label Text="{Binding Status}" />
                                    <Label Text=" | " />
                                    <Label Text="{Binding Priority}" />
                                    <Label Text=" | " />
                                    <Label Text="{Binding CreatedAt, StringFormat='{0:d}'}" />
                                </StackLayout>
                                
                                <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                                        Text="View"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AllIncidentsViewModel}}, Path=ViewIncidentCommand}"
                                        CommandParameter="{Binding Id}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage> 